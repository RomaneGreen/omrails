<div class="container">

  <div class="row">
    <%=link_to current_user.username, user_path(current_user.username)%>
    <table class='table-inverse inverse'>
      <thead>
        <tr>
          <th>Tweetname</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.user.username %></td>
            <td><%= tweet.content %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>

</div>